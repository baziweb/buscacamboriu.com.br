{
    "name": "buscacamboriu/website",
    "description": "Site Busca CamboriÃº - WordPress",
    "type": "project",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress --ignore=vendor/,node_modules/ --extensions=php .",
        "phpcbf": "phpcbf --standard=WordPress --ignore=vendor/,node_modules/ --extensions=php .",
        "lint": "find . -name '*.php' -not -path './vendor/*' -not -path './node_modules/*' -exec php -l {} \\;",
        "post-install-cmd": [
            "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
        ],
        "post-update-cmd": [
            "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
